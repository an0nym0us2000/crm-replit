# Database Configuration
# Get your PostgreSQL connection string from Neon (https://neon.tech), Supabase, or any PostgreSQL provider
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# Server Configuration
PORT=5000
NODE_ENV=production

# Security
# IMPORTANT: Generate a secure random string for production
# Use: openssl rand -base64 48  OR  node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
SESSION_SECRET=your-super-secret-session-key-min-32-chars

# CORS - Comma-separated list of allowed origins (required in production)
# Add your Vercel deployment URL here after deploying
# Example: ALLOWED_ORIGINS=https://your-app.vercel.app,https://www.your-app.vercel.app
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
